{
	"name": "simple-ecs-deploy-tool",
	"build": {
		"context": ".",
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--env-file",
		".devcontainer/.env"
	],
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"GitHub.copilot"
			]
		}
	},
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind",
		"source=${env:HOME}/.aws,target=/root/.aws,type=bind,readOnly=true",
		"source=${env:HOME}/.claude,target=/root/.claude,type=bind"
	],
	"forwardPorts": [],
	"remoteUser": "root",
	"postCreateCommand": "/bin/bash .devcontainer/post_created.sh"
}
